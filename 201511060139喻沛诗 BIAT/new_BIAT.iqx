//刺激反应，被试平衡
<trial Neg>
	/stimulusframes = [1 = Negtxt]
	/validresponse = ("E", "I")
	/correctresponse = ("I")
	/posttrialpause = 250
</trial>

<trial Pos>
	/stimulusframes = [1 = Postxt]
	/validresponse = ("E", "I")
	/correctresponse = ("E")
	/posttrialpause = 250
</trial>

<trial BlackL>
	/stimulusframes = [1 = Blackpic]
	/validresponse = ("E", "I")
	/correctresponse = ("E")
	/posttrialpause = 250
	/errormessage = (errortxt, 200)
</trial>

<trial BlackR>
	/stimulusframes = [1 = Blackpic]
	/validresponse = ("E", "I")
	/correctresponse = ("I")
	/posttrialpause = 250
	/errormessage = (errortxt, 200)
</trial>

<trial WhiteL>
	/stimulusframes = [1 = Whitepic]
	/validresponse = ("E", "I")
	/correctresponse = ("E")
	/posttrialpause = 250
	/errormessage = (errortxt, 200)
</trial>

<trial WhiteR>
	/stimulusframes = [1 = Whitepic]
	/validresponse = ("E", "I")
	/correctresponse = ("I")
	/posttrialpause = 250
	/errormessage = (errortxt, 200)
</trial>

===========================================
//指导语的trial
<trial BeginInstructiontrial>
	/stimulusframes = [1 = BeginInstructiontxt]
	/correctresponse = (anyresponse)
	/errormessage = false
	/recorddata = false
</trial>

<trial TaskInstructiontrial>
	/stimulusframes = [1 = TaskInstructiontxt]
	/correctresponse = (anyresponse)
	/errormessage = false
	/recorddata = false
</trial>

<trial EndInstructiontrial>
	/stimulusframes = [1 = EndInstructiontxt]
	/correctresponse = (anyresponse)
	/errormessage = false
	/recorddata = false
</trial>

<trial ShowN_PInstructiontrial>
	/stimulusframes = [1 = ShowNegInstructiontxt, OrInstructiontxt, ShowPosInstructiontxt]
	/correctresponse = (anyresponse)
	/errormessage = false
	/recorddata = false
</trial>

<trial ShowB_WInstructiontrial>
	/stimulusframes = [1 = ShowBlackInstructiontxt, OrInstructiontxt, ShowWhiteInstructiontxt, Blackpic1, Blackpic2, Blackpic3, Blackpic4, Whitepic1, Whitepic2, Whitepic3, Whitepic4]
	/correctresponse = (anyresponse)
	/errormessage = false
	/recorddata = false
</trial>

*************************************************************
************************************************************
//指导语block
<block BeginInstructionblk>
	/trials = [1 = BeginInstructiontrial; 2 = ShowN_PInstructiontrial; 3 = ShowB_WInstructiontrial]
	/screencolor = (0, 0, 0)
</block>

<block BlackLtest>
	/onblockbegin = [values.currenttarget = item.blacklabel.item.1]
	/trials = [1 = TaskInstructiontrial; 2-5 = noreplace( BlackL, WhiteR ); 7,9,11,13 = noreplace( BlackL, WhiteR ); 6,8,10,12 = noreplace( Neg, Pos )]
	/errormessage = (errortxt, 200) 
	/screencolor = (0, 0, 0)
</block>

<block WhiteLtest>
	/onblockbegin = [values.currenttarget = item.whitelabel.item.1]
	/trials = [1 = TaskInstructiontrial; 2-5 = noreplace( BlackR, WhiteL ); 7,9,11,13 = noreplace( BlackR, WhiteL ); 6,8,10,12 = noreplace( Neg, Pos)]
	/errormessage = (errortxt, 200)
	/screencolor = (0, 0, 0)
</block>

<block BlackL>
	/onblockbegin = [values.currenttarget = item.blacklabel.item.1]
	/trials = [1 = TaskInstructiontrial; 2-5 = noreplace( BlackL, WhiteR ); 7,9,11,13,15,17,19,21 = noreplace( BlackL, WhiteR ); 6,8,10,12,14,16,18,20 = noreplace( Neg, Pos )]
	/errormessage = true(errortxt, 200)
	/screencolor = (0, 0, 0)
</block>

<block WhiteL>
	/onblockbegin = [values.currenttarget = item.whitelabel.item.1]
	/trials = [1 = TaskInstructiontrial; 2-5 = noreplace( BlackR, WhiteL ); 7,9,11,13,15,17,19,21 = noreplace( BlackR, WhiteL ); 6,8,10,12,14,16,18,20 = noreplace( Neg, Pos)]
	/errormessage = true(errortxt, 200)
	/screencolor = (0, 0, 0)
</block>

<block EndInstructionblk>
	/trials = [1 = EndInstructiontrial]
	/screencolor = (0, 0, 0)
</block>

