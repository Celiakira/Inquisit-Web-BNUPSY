********************************************************
<expt>
	/subjects = ( 1 of 2 )
	/blocks = [1 = BeginInstructionblk; 2 = BlackLtest; 3 = WhiteLtest; 4 = BlackL; 5 = WhiteL; 6 = BlackL; 7 = WhiteL; 8 = EndInstructionblk]
</expt>

<expt>
	/subjects = ( 2 of 2 )
	/blocks = [1 = BeginInstructionblk; 2 = WhiteLtest; 3 = BlackLtest; 4 = WhiteL; 5 = BlackL; 6 = WhiteL; 7 = BlackL; 8 = EndInstructionblk]
